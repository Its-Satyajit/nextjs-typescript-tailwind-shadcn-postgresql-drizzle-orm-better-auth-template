{
  "name": "nextjs-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "docs:generate": "typedoc",
    "build": "pnpm dr:build && pnpm next build",
    "check": "next lint && tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "dev:turbo": "next dev --turbo",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "preview": "next build && next start",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx,cjs,mjs}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx,cjs,mjs}\" --cache",
    "dr:build": "npx declarative-routing build",
    "dr:build:watch": "npx declarative-routing build --watch",
    "format:write:watch": "pnpm onchange -j 12 -d 1500 -f change -f add  \"**/*\" --exclude-path .gitignore -- prettier -w \"**/*.{ts,tsx,js,jsx,mdx,cjs,mjs,json}\" --cache --log-level warn",
    "dev": "concurrently -c \"#604CC3, #8FD14F ,#FF6600,#FFA600\" \"pnpm dev:turbo\" \"pnpm dr:build:watch\" \"pnpm format:write:watch\"  --names \"Next.js,Routing,Prettier\""
  },
  "dependencies": {
    "@better-fetch/fetch": "^1.1.15",
    "@hookform/resolvers": "^4.1.3",
    "@icons-pack/react-simple-icons": "^12.2.0",
    "@its-satyajit/id-generator": "npm:@jsr/its-satyajit__id-generator@^0.2.1",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-toast": "^1.2.6",
    "@t3-oss/env-nextjs": "^0.12.0",
    "@tanstack/react-query": "^5.67.2",
    "@tanstack/react-query-devtools": "^5.67.2",
    "better-auth": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "declarative-routing": "^0.1.20",
    "drizzle-orm": "^0.40.0",
    "lucide-react": "^0.479.0",
    "next": "15.2.1",
    "next-themes": "^0.4.5",
    "nodemailer": "^6.10.0",
    "postgres": "^3.4.5",
    "query-string": "^9.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "server-only": "^0.0.1",
    "sonner": "^2.0.1",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@tailwindcss/postcss": "^4.0.12",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/eslint-plugin-query": "^5.67.2",
    "@types/node": "^22.13.10",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "babel-plugin-react-compiler": "beta",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.30.5",
    "eslint": "^9.22.0",
    "eslint-config-next": "15.2.1",
    "eslint-plugin-drizzle": "^0.2.3",
    "onchange": "^7.1.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.0.12",
    "typedoc": "^0.27.9",
    "typedoc-github-theme": "^0.2.1",
    "typedoc-plugin-markdown": "^4.4.2",
    "typescript": "^5.8.2"
  }
}
